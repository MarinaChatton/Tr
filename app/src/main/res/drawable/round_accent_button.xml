<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <gradient android:endColor="@color/colorPrimary" android:gradientRadius="100" android:startColor="@color/colorPrimaryDark" android:type="radial" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="oval">
            <solid android:color="@color/colorPrimary" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <gradient android:endColor="@color/colorPrimaryDark" android:gradientRadius="100" android:startColor="@color/colorPrimary" android:type="radial" />
        </shape>
    </item>
</selector>